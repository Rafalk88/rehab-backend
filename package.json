{
  "name": "rehab-backend",
  "version": "0.6.0",
  "description": "This repository contains the backend of the Rehabilitation Management System",
  "main": "index.js",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node --loader tsconfig-paths/esm dist/main.js",
    "build": "nest build && tsc-alias",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.mjs",
    "test:unit": "echo \"Testy są jeszcze wyłączone\"",
    "test:int": "echo \"Testy są jeszcze wyłączone\"",
    "test:watch": "echo \"Testy są jeszcze wyłączone\"",
    "test:cov": "echo \"Testy są jeszcze wyłączone\"",
    "seed": "node --loader ts-node/esm -r tsconfig-paths/register src/seed/main.ts",
    "lint": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "prisma:generate": "prisma generate --schema=src/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=src/prisma/schema.prisma"
  },
  "keywords": [],
  "author": {
    "name": "Rafał Kochanecki",
    "email": "rafal.kochanecki@gmail.com",
    "url": "https://pl.linkedin.com/in/rafalkochanecki"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rafalk88/rehab-backend"
  },
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@nestjs/cache-manager": "3.0.1",
    "@nestjs/common": "11.1.6",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.6",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.6",
    "@prisma/client": "6.13",
    "add": "2.0.6",
    "bcrypt": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "cors": "2.8.5",
    "dotenv": "17.2.1",
    "express": "5.1.0",
    "express-rate-limit": "8.0.1",
    "helmet": "8.1.0",
    "jest-mock-extended": "4.0.0",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.1",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pnpm": "10.14.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@jest/globals": "30.2.0",
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.7",
    "@nestjs/testing": "11.1.6",
    "@types/bcrypt": "6.0.0",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/morgan": "1.9.10",
    "@types/node": "24.2.0",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.39.0",
    "@typescript-eslint/parser": "8.39.0",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsdoc": "52.0.4",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "jest": "30.0.5",
    "jsdoc": "4.0.4",
    "lint-staged": "16.1.5",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "prisma": "6.13",
    "supertest": "7.1.4",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "1.8.16",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2",
    "uuid": "13.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:unit"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir/src"
    ]
  }
}
